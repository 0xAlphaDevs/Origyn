datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

type ProductAttestationSchema {
  productName           String
  productId             String
  soldBy                String
  boughtBy              String
  productPrice          Float
}

model Transactions {
  id               String                   @id @default(auto()) @map("_id") @db.ObjectId
  attestation      ProductAttestationSchema
  attestationId    String                   @unique
  from             String
  to               String
  transactionValue Float
  timestamp        DateTime
}

model Products {
  id                  String @id @default(auto()) @map("_id") @db.ObjectId
  productName         String
  productDescription  String
  productId           String
  productPrice        Float
  creator             String
  attestationId       String
  timestamp           DateTime
}

model Ratings {
  id        String   @id @default(auto()) @map("_id") @db.ObjectId
  productId String
  rating    Float
  timestamp DateTime
}

model User {
  id        String   @id @default(auto()) @map("_id") @db.ObjectId
  name      String
  wallet    String
  category  String
  timestamp DateTime
}